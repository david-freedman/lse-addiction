APP_NAME=LSE
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=uk
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=86400
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Docker user mapping
UID=1000
GID=1000

# Verification providers
VERIFICATION_EMAIL_PROVIDER=sendpulse
VERIFICATION_PHONE_PROVIDER=alphasms
# Verification backdoor (local development only)
VERIFICATION_BACKDOOR_CODE=1111
# Verification rate limiting (in seconds for interval, count for hourly limit)
VERIFICATION_RESEND_INTERVAL=120
VERIFICATION_HOURLY_LIMIT=5

# AlphaSMS configuration
ALPHASMS_API_KEY=
ALPHASMS_BASE_URL=https://alphasms.ua/api/

# Payment configuration
PAYMENT_DEFAULT_PROVIDER=wayforpay

# WayForPay configuration
WAYFORPAY_MERCHANT_ACCOUNT=
WAYFORPAY_SECRET_KEY=
WAYFORPAY_MERCHANT_DOMAIN="${APP_URL}"
WAYFORPAY_API_URL=https://secure.wayforpay.com/pay
WAYFORPAY_MODE=sandbox
WAYFORPAY_LANGUAGE=UA
WAYFORPAY_API_VERSION=2
WAYFORPAY_ORDER_TIMEOUT=49000
WAYFORPAY_PAYMENT_SYSTEMS=card;googlePay;applePay
WAYFORPAY_DEFAULT_PAYMENT_SYSTEM=card

